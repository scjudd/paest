* { margin: 0; padding: 0;}
header,footer,aside,section,article,nav,div { display: block; }
/*END RESETS*/
body, html { 
	margin: 0;
	padding: 0;
    line-height: 100%;
    height: 100%;
    width: 100%;
    background: #111;
}
h1,h2,h3,h4,h5,h6 {
    font-weight: bold;
    margin: 0;
    padding: 0;
}
::-webkit-scrollbar {
    width: 16px;
    height: 16px;
    background:#444;
  -webkit-border-radius:15px;
}

::-webkit-scrollbar-thumb {
  -webkit-border-radius:15px;
   background: #666;
}

::-webkit-scrollbar-corner {
  display: none;
}
::-webkit-scrollbar-button:disabled {
  display:none;
}

pre::-webkit-scrollbar:vertical {
  display:none;
}

pre::-webkit-scrollbar-thumb:vertical {
  display:none;
}

pre.code {
    line-height: 17px;
    font-size: 12px;
}
body {
    font-family: 'Arial','sans-serif';
    font-size: 93%;
    color: #fff;
}
header {
    overflow: hidden;
    padding: 10px;
    border-bottom: 1px solid #333;
}
header h1 a {
    background: none;
    color: #fff;
    /* font-style: oblique; */
    padding: 5px;
}
header h1 a:hover {
    color: #fff;
}
header h1 {
    float: left; 
    font-size: 161%;
}
nav {
    float: right;
}
nav ul {
    display: block;
}
nav ul li {
    display: inline;
    list-style-type: none;
}
nav ul li a {
    color: #fff;
    background: #444;
    padding: 3px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    font-size: 1.3em;
}
#main-content {
    padding: 10px;
}
ul.errorlist {
	margin: 0;
	padding: 0 0 10px;
}
ul.errorlist  li {
	list-style: none;
	padding: 0;
	margin: 10px 0 0;
	background: red;
	padding: 5px;
	color: #fff;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
}
p { 
    padding: 5px 0;
    margin: 0;
}
div.highlight{
	background: #000;
}


#contain table td {
    margin: 0;
    padding: 0;
    overflow: auto;
}
#contain table th {
    border-right: 1px solid #333;
    vertical-align: top;
}
#contain table th a {    
display: block;
    text-align: right;
    border-bottom: 1px solid #333;
    background: none;
}
#contain table span.line {
    display: block;
}

a {
	color: #fff;
	text-decoration: none;
    background: #333;
}
form label {
	display: block;
	font-weight: bold;
    color: #fff;
}
form input,
form select,
form textarea{
  background:#000;
  color:#FFF;
}
form input {
	padding: 5px;
    border: none;
}
form input:hover, form textarea:hover, form select:hover { 
    border: none;
}
form textarea { 
	padding: 5px;
    width:100%;
    border: none;
}
form select {
    border: none;
}
form input[type="submit"] {
	background: #444;
	color: #fff;
	font-weight: bold;
	border: none;
	cursor: pointer;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border-radius: 3px;
	margin: 20px 0;
	text-transform: lowercase;
}
form input[type="submit"]:hover {
	background: #555;
}
form.edit {
	margin: 20px 0 0;
}
form.edit textarea {
  width:100%;
  height:90%;
}
#main-content {
    overflow: hidden;
}
#paste-form {
    float: left;
    width: 80%;
}
#paste-form input[type="text"], #paste-form textarea {
    width: 95%;
}
#sidebar {
    float: left;
    width: 20%;
}
#sidebar-content {
    padding: 0 10px;
    border-left: 1px solid #333;
}
#latest {
    padding: 10px;
    margin: 0;
}
#latest li {
    list-style: none;   
    margin: 3px 0;
    overflow: hidden;
    text-overflow: ellipsis;
}
#latest li a {
    background: #333;
    display: block;
    padding: 5px;
    overflow: hidden;
}
#latest li a:hover {
    background: #555;
}
#latest li a span {
    font-size: 70%;
    float: right;
}

footer {
	border-top: 1px solid #333;
    color: #fff;
    font-size: 85%;
	text-align: center;
}
.code a {
    height: 1.4em
}
